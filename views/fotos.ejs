<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <%- include('./partials/header.ejs') %>
    <title>Fotos</title>
</head>
<body>
    <%- include('./partials/nav.ejs') %>
    <section>


        <div id="fotos">
            <% for( let index = 0; index < rows.length; index++ ) { %>
                <div id="foto">
                    <h2><%= rows[index].title %></h2>
        
                    <div id="image">
                        <img src="<%= rows[index].url %>">
                    </div>
                    
                    <p><%= rows[index].description %></p>
                    <span><%= rows[index].date %></span>
                    
                    
                    <div class="botones d-flex justify-content-between my-2">

                        <div id="votos">
                            <a href="/fotos/addvoto/<%= rows[index].id %>" class="btn btn-success">Like!</a>
                            <a href="/fotos/removevoto/<%= rows[index].id %>" class="btn btn-danger">Dislike!</a>
                        </div>
    
                        
                        <div id="btn">
                            <a href="/fotos/edit/<%= rows[index].id %>" class="btn btn-dark">Editar</a>
                            <a href="/fotos/delete/<%= rows[index].id %>" class="btn btn-dark">Eliminar</a>
                        </div>

                    </div>
                    

                </div>
            <% } %>
            
            
            
            
        </div>

    </section>
    

    <%- include('./partials/footer.ejs') %>
</body>
</html>